{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "githubRelease": true,
      "message": "chore: release",
      "yes": true
    }
  },
  "ignoreChanges": [
    "**/__(fixtures|tests|specs)__/**",
    "**/*.(md|txt)"
  ],
  "npmClient": "yarn",
  "packages": [
    "docs/*",
    "packages/*"
  ],
  "useWorkspaces": true,
  "version": "0.0.0"
}

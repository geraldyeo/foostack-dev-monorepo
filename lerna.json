{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "githubRelease": true,
      "message": "chore: release",
      "yes": true
    }
  },
  "ignoreChanges": [
    "**/__(fixtures|tests|specs)__/**",
    "**/*.(md|txt)"
  ],
  "npmClient": "yarn",
  "packages": [
    "clients/*",
    "packages/*",
    "playgrounds/*",
    "servers/*"
  ],
  "useWorkspaces": true,
  "version": "independent"
}
